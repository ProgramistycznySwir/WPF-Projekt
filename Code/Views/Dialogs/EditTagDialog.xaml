<Window x:Class="WPF_Project.Views.Dialogs.EditTagDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Project.Views.Dialogs"
        mc:Ignorable="d"
        Title="Edit Tag" Height="100" Width="200">
    <Grid Background="Beige">
        <StackPanel>
            <TextBox Text="{Binding Path=Name, Mode=TwoWay}" Margin="5"/>

            <Grid>
                <Button Content="Save changes" Width="100" Margin="5" HorizontalAlignment="Left"  Click="btn_Save_Click"/>
                <Button Content="Cancel"       Width="50"  Margin="5" HorizontalAlignment="Right" Click="btn_Cancel_Click"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
